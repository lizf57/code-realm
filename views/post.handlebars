<section class="row">
    <div class="column">
        <h2>Create Post</h2>

        <form class="create-post-form">
            <div>
                <input type="text" id="post_title" name="post_title" placeholder="Post Title" />
            </div>

            <div>
             <textarea id="post_content" name="post_content" placeholder="Post Content"></textarea>
            </div>

            <button type="submit" id="create-post-btn"> Submit post</button>
        </form>
    </div>

    <div class="column">
        <h2>About Me</h2>
        {{> user-data}}
    </div>
</section>

{{#if posts.length}}
<section>
    <h2>{{Username}}'s Posts</h2>
    <ol>
        {{#each posts as post}}
        <li>
            {{> post-data post}}
            <a href="/dashboard/edit/{{post.id}}" id="edit-link"> Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/public/js/addPost.js"></script>